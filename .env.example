# SWAG MCP Server Configuration
# This file contains example configuration values for the SWAG MCP server

# ========================================
# CORE SETTINGS (Required)
# ========================================

# Path to SWAG proxy configurations directory
# This is where SWAG stores its nginx proxy configuration files
SWAG_MCP_PROXY_CONFS_PATH=/swag/nginx/proxy-confs

# Directory for SWAG MCP server logs
# This directory will be created if it doesn't exist
SWAG_MCP_LOG_DIRECTORY=/app/.swag-mcp/logs

# ========================================
# SERVER SETTINGS
# ========================================

# Host interface for the MCP server to bind to
# Use 0.0.0.0 for Docker/external access, 127.0.0.1 for local only
SWAG_MCP_HOST=0.0.0.0

# External port for Docker container mapping (used by docker-compose.yaml)
# Internal port is always 8000, this sets the external accessible port
SWAG_MCP_PORT=8000

# ========================================
# DEFAULT CONFIGURATION
# ========================================

# Default authentication method for new configurations
# Options: none, basic, ldap, authelia, authentik, tinyauth
# WARNING: 'none' exposes services without authentication!
SWAG_MCP_DEFAULT_AUTH_METHOD=authelia

# Enable QUIC support by default for new configurations
SWAG_MCP_DEFAULT_QUIC_ENABLED=false

# ========================================
# BACKUP SETTINGS
# ========================================

# Number of days to retain backup files
# Backups older than this will be cleaned up automatically
SWAG_MCP_BACKUP_RETENTION_DAYS=30

# ========================================
# LOGGING SETTINGS
# ========================================

# Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
SWAG_MCP_LOG_LEVEL=INFO

# Enable file logging in addition to console output
SWAG_MCP_LOG_FILE_ENABLED=true

# Maximum size of log files before rotation (in bytes)
# Default: 10485760 = 10MB
SWAG_MCP_LOG_FILE_MAX_BYTES=10485760

# Enable structured JSON logging (for log aggregation)
SWAG_MCP_ENABLE_STRUCTURED_LOGGING=false

# Include request/response payloads in logs (for debugging)
SWAG_MCP_LOG_PAYLOADS=false

# Maximum length of logged payloads
SWAG_MCP_LOG_PAYLOAD_MAX_LENGTH=1000

# ========================================
# PERFORMANCE SETTINGS
# ========================================

# Threshold for slow operation warnings (in milliseconds)
SWAG_MCP_SLOW_OPERATION_THRESHOLD_MS=1000

# Enable automatic retry middleware for failed operations
SWAG_MCP_ENABLE_RETRY_MIDDLEWARE=true

# Maximum number of retries for failed operations
SWAG_MCP_MAX_RETRIES=3

# ========================================
# RATE LIMITING (Optional)
# ========================================

# Enable rate limiting middleware
# Helps protect against abuse and ensures fair usage
SWAG_MCP_RATE_LIMIT_ENABLED=false

# Rate limit: requests per second
SWAG_MCP_RATE_LIMIT_RPS=10.0

# Rate limit: burst capacity
# Allow brief spikes above the RPS limit
SWAG_MCP_RATE_LIMIT_BURST=20

# ========================================
# ADVANCED SETTINGS
# ========================================

# Template path (usually doesn't need to be changed)
SWAG_MCP_TEMPLATE_PATH=templates
