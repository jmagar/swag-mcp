server {
    listen 443 ssl;
{% if enable_quic %}
    listen 443 quic;
{% endif %}
    listen [::]:443 ssl;
{% if enable_quic %}
    listen [::]:443 quic;
{% endif %}

    server_name {{ server_name }};

    include /config/nginx/ssl.conf;

    client_max_body_size 0;

{% if auth_method != "none" %}
    # enable for {{ auth_method }} (requires {{ auth_method }}-location.conf in the location block)
